<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <RelativeLayout
       android:id="@+id/mainContainer"
       android:layout_width="match_parent"
       android:layout_height="@dimen/_50sdp"
       android:layout_marginHorizontal="@dimen/_8sdp"
       android:layout_marginTop="@dimen/_8sdp"
       android:elevation="0.3dp"
       android:background="@drawable/language_shape_sel">

      <ImageView
          android:id="@+id/imageView2"
          android:layout_width="@dimen/_50sdp"
          android:layout_height="match_parent"
          android:adjustViewBounds="true"
          android:padding="@dimen/_10sdp"
          android:src="@drawable/leng1"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <LinearLayout
          android:id="@+id/ll_line"
          android:layout_width="@dimen/_1sdp"
          android:layout_height="match_parent"
          android:layout_marginVertical="@dimen/_9sdp"
          android:layout_toRightOf="@+id/imageView2"
          android:background="@color/maincolor">

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_toRightOf="@+id/ll_line"
          android:orientation="horizontal"
          android:layout_toLeftOf="@+id/imageRadio">
         <TextView
             android:id="@+id/txtLanguage"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_marginLeft="@dimen/_9sdp"
             android:backgroundTint="#C4FFFFFF"
             android:gravity="center_vertical"
             android:text="name"
             android:textSize="@dimen/_11sdp"
             android:textColor="@color/textcolor1"
           android:fontFamily="@font/nunito_semi_bold"
             />
         <TextView
             android:id="@+id/txtLanguage1"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingLeft="@dimen/_5sdp"
             android:layout_marginRight="@dimen/_9sdp"
             android:backgroundTint="#C4FFFFFF"
             android:gravity="center_vertical"
             android:text="name"
             android:textSize="@dimen/_10sdp"
             android:fontFamily="@font/nunito_regular"
             android:textColor="@color/textcolor1"
             />

      </LinearLayout>

      <ImageView
          android:id="@+id/imageRadio"
          android:layout_width="@dimen/_40sdp"
          android:layout_height="match_parent"
          android:adjustViewBounds="true"
          android:padding="@dimen/_11sdp"
          android:src="@drawable/language_radio_button_unchecked"
          android:layout_alignParentRight="true" />

   </RelativeLayout>


</LinearLayout>