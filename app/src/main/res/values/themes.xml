<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="SlidingDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>
    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/wass_colorcontrolactivated</item>
    </style>  <style name="DialogAnimation">
    <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
    <item name="android:windowExitAnimation">@anim/slide_out_down</item>
</style>

    <style name="black" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

    </style>

    <style name="SelectableItemBackgroundBorder">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SearchViewStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:editTextColor">@color/colorAccent</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>


    </style>

    <style name="Play">
        <item name="android:src">@drawable/play</item>
        <item name="android:contentDescription">@string/exo_controls_play_description</item>
    </style>

    <style name="Previous">
        <item name="android:src">@drawable/previous</item>
        <item name="android:contentDescription">@string/exo_controls_previous_description</item>
    </style>

    <style name="Rewind">
        <item name="android:src">@drawable/rewind</item>
        <item name="android:contentDescription">@string/exo_controls_rewind_description</item>
    </style>

    <style name="Crop">
        <item name="android:src">@drawable/full</item>
    </style>

    <style name="Forward">
        <item name="android:src">@drawable/forward</item>
        <item name="android:contentDescription">@string/exo_controls_fastforward_description</item>
    </style>

    <style name="Pause">
        <item name="android:src">@drawable/pause</item>
        <item name="android:contentDescription">@string/exo_controls_pause_description</item>
    </style>


    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="l">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="titletxt">@color/black</item>
        <item name="subtitletxt">@color/gray</item>
        <item name="mainbackground">@color/white</item>

    </style>


    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#F6FAFD</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="BottomNavigationView" parent="Theme.WhatsTracker">
        <item name="fontFamily">@font/nunito_regular</item>

    </style>
    <style name="MinWidth">
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppTheme22" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/transparent</item>
        <item name="colorPrimaryVariant">@color/transparent</item>
        <item name="colorOnPrimary">#00FFFFFF</item>
    </style>



    <style name="Theme.WhatsTracker" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/wass_green</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    //text white


    //text black

    <style name="Theme.TranslatorLanguageTranslatorVoiceTranslator" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:statusBarColor">@color/bg_color</item>
        <item name="android:windowLightStatusBar">false</item>

    </style>

    //white text

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="Theme.ReelsSection" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorAccent</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSizePercent" parent="">
        <item name="cornerSize">20%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSizeDP" parent="">
        <item name="cornerSize">@dimen/_7sdp</item>
    </style>

    <style name="ColorStatusBarBilling" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Regular" parent="android:TextAppearance">
        <item name="fontPath">font/Regular.ttf</item>
    </style>

    <style name="SemiBold" parent="android:TextAppearance">
        <item name="fontPath">font/SemiBold.ttf</item>
    </style>

    <style name="Medium" parent="android:TextAppearance">
        <item name="fontPath">font/Medium.ttf</item>
    </style>

</resources>