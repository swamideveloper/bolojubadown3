<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/c1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_2sdp"
        android:layout_marginVertical="@dimen/_4sdp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardElevation="@dimen/_4sdp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:outlineAmbientShadowColor="@color/gray">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/c2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_87sdp"
                android:layout_centerHorizontal="true"
                app:cardBackgroundColor="@color/gray"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/ivThumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/thume_g"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/play" />

                <RelativeLayout
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_vdo_time"
                    android:backgroundTint="@color/black"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp">

                    <ImageView
                        android:id="@+id/i1"
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="@dimen/_3sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:visibility="gone"
                        android:src="@drawable/ic_player" />

                    <TextView
                        android:id="@+id/tvDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/i1"
                        android:fontFamily="@font/nunito_regular"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="05:36"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_5sdp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/c2"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_toLeftOf="@id/ivMore"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:gravity="start"
                    android:paddingRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8sdp" />

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_below="@id/tvName"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:background="@drawable/play_bg"
                    android:backgroundTint="#EDEDED"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_regular"
                        android:singleLine="true"
                        android:text="1 video"
                        android:gravity="start"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/_5sdp" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/folder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvName"
                        android:fontFamily="@font/rubik_regular"
                        android:gravity="start"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_5sdp" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_regular"
                    android:singleLine="true"
                    android:text="37.mp4"
                    android:textColor="@color/gry"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/l1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvName"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_regular"
                        android:gravity=""


                        android:singleLine="true"
                        android:text="Modified : "
                        android:textColor="@color/gry"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/rubik_regular"
                        android:gravity=""


                        android:singleLine="true"
                        android:text="1 Mar"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_8sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvName"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_toRightOf="@id/l1"
                    android:layout_marginTop="-1dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/resolution"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:gravity=""
                        android:singleLine="true"
                        android:text="Size : "
                        android:textColor="@color/black_txt"
                        android:textSize="@dimen/_5sdp" />

                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="8dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@color/gray" />


                    <TextView
                        android:id="@+id/tvSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:gravity=""
                        android:singleLine="true"
                        android:text="1 Mar"
                        android:textColor="@color/black_txt"
                        android:textSize="@dimen/_5sdp" />

                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/ivMore"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                android:layout_below="@+id/c1"
                android:padding="@dimen/_3sdp"
                android:layout_marginRight="1dp"
                android:src="@drawable/more"
                android:visibility="visible"
                app:tint="@color/gray" />

        </RelativeLayout>

    </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>