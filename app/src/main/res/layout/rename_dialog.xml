<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp">


    <TextView
        android:id="@+id/tv_film_name_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/NameYourfile"
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtFileNameNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tv_film_name_new"/>

    <TextView
        android:id="@+id/btnDownloadNow"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:gravity="center"
        android:backgroundTint="@color/colorAccent"
        android:background="@drawable/round_in2"
        android:drawableTint="@color/white"
        android:padding="5dp"
        android:text="@string/DownloadNow"
        android:textColor="@color/white"
        android:fontFamily="@font/nunito_regular"
        app:layout_constraintTop_toBottomOf="@+id/txtFileNameNew"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>