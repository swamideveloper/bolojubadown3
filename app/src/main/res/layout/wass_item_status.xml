<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#F3F3F3"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:id="@+id/card_view"
    app:cardElevation="0dp"
    android:layout_margin="4dp"
    android:tag="layout/items_whatsapp_view_0"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivThumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/video_icon"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/_7sdp"
                    android:background="@drawable/shape_round_transprent"
                    android:src="@drawable/wass_video_play_icon"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/save"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:padding="@dimen/_7sdp"
                        android:background="@drawable/shape_round_transprent"
                        android:layout_centerInParent="true"
                        android:src="@drawable/wass_download_saver" />

                    <ImageView
                        android:id="@+id/save_done"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:background="@color/wass_white"
                        android:src="@drawable/wass_ic_about"
                        android:visibility="gone" />

                    <ImageButton
                        android:id="@+id/share"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/caption_item_bg"
                        android:gravity="center"
                        android:src="@drawable/wass_ic_baseline_share_24"
                        android:visibility="gone"
                        app:tint="#0A670E" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
