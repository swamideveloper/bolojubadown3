<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:layout_margin="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_14sdp"
        app:cardElevation="@dimen/_2sdp"
        app:cardPreventCornerOverlap="false">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_65sdp"
                app:cardBackgroundColor="@color/gray"
                app:cardCornerRadius="0dp"
                android:layout_marginLeft="@dimen/_8sdp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/ivThumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/thume_g"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/play" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_gravity="right|bottom"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:background="@drawable/bg_vdo_time"
                    android:backgroundTint="#46020202"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp">

                    <ImageView
                        android:id="@+id/i1"
                        android:layout_width="@dimen/_4sdp"
                        android:layout_height="@dimen/_4sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:visibility="gone"
                        android:src="@drawable/ic_player" />

                    <TextView
                        android:id="@+id/tvDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/i1"
                        android:fontFamily="@font/rubik_regular"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="05:36"
                        android:layout_marginHorizontal="@dimen/_3sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8ssp" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_4sdp">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_semi_bold"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_regular"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="37.mp4"
                        android:textColor="@color/white"
                        android:textSize="14sp"

                        android:textStyle="bold"
                        android:visibility="gone" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/resolution"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_semi_bold"
                            android:gravity=""
                            android:includeFontPadding="false"
                            android:paddingRight="3dp"
                            android:singleLine="true"
                            android:text="Modified  "
                            android:textColor="#878787"
                            android:textSize="@dimen/_8sdp" />


                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/rubik_regular"
                            android:includeFontPadding="false"
                            android:paddingLeft="3dp"

                            android:paddingRight="3dp"
                            android:singleLine="true"
                            android:text="1 Mar"
                            android:textColor="#878787"
                            android:textSize="@dimen/_7sdp"
                            android:visibility="gone" />

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="10dp"
                            android:layout_marginHorizontal="5dp"
                            android:background="#878787" />

                        <TextView
                            android:id="@+id/tvSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_semi_bold"
                            android:gravity=""
                            android:includeFontPadding="false"
                            android:paddingLeft="3dp"

                            android:paddingRight="3dp"
                            android:singleLine="true"
                            android:text="1 Mar"
                            android:textColor="#878787"
                            android:textSize="@dimen/_8sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/app_card_trans_mini"
                        android:backgroundTint="#E6E6E6"
                        android:elevation="0dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="3dp"
                        android:paddingVertical="0dp">

                        <ImageView
                            android:layout_width="@dimen/_17sdp"
                            android:layout_height="@dimen/_17sdp"
                            android:layout_marginVertical="@dimen/_1sdp"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:fontFamily="@font/rubik_regular"
                            android:padding="@dimen/_2sdp"
                            android:tint="@color/colorPrimary"
                            android:src="@drawable/png_ic_preview_folder" />

                        <TextView
                            android:id="@+id/folder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvName"
                            android:layout_gravity="center"
                            android:fontFamily="@font/nunito_regular"
                            android:gravity="center|left"
                            android:includeFontPadding="false"
                            android:paddingLeft="@dimen/_2sdp"
                            android:paddingRight="@dimen/_4sdp"
                            android:singleLine="true"
                            android:text="@string/app_name"
                            android:textColor="#787878"
                            android:textSize="@dimen/_7sdp" />


                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/ivMore"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:tint="@color/grey"
                    android:src="@drawable/ic_more_verts" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginBottom="5dp"
        android:background="@color/gray"
        android:visibility="gone" />

</LinearLayout>